{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@source/*": ["src/*"],
      "@db/*": ["src/db/*"]
    }
  },
  "include": ["src/**/*"]
}
